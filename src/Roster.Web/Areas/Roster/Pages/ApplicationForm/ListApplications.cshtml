@page
@model ListApplicationsModel

<h1>List applications</h1>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>Nickname</th>
                <th>Email</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appForm in Model.ApplicationForms)
            {
                <tr>
                    <td>@appForm.Nickname</td>
                    <td>@appForm.Email</td>
                    <td><partial name="_ApplicationProcess" for="@appForm" /></td>
                    <td><a asp-area="Roster" asp-page="/ApplicationForm/Details" asp-route-nickname=@appForm.Nickname>Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>